<%= link_to given_path do %>
  <div class="relative h-2/4" data-controller="swiper">
    <div class="swiper-container max-h-full" data-swiper-target="container">
      <ul class="swiper-wrapper">
        <% category.photos.shuffle.each_with_index do |item| %>
          <li class="swiper-slide w-full">
            <%= cl_image_tag item.photo.key, class: 'w-full object-cover', 'data-swiper-target' => 'images' %>
          </li>
        <% end %>
      </ul>
    </div>
    <h1 class="absolute w-full text-center top-2/4 text-4xl z-50 text-white"><%= category.title.upcase %></h1>
  </div>
<% end %>
